<Window x:Class="WebcamAKTs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebcamAKTs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="WebcamImage" Width="640" Height="480" Margin="10" />
            <TextBlock x:Name="EmotionText" FontSize="16" Margin="10" />
            <TextBlock x:Name="EmotionDetailText" FontSize="14" Margin="10" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
