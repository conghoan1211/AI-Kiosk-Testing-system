<Window x:Class="DesktopApp.SplashWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="Secure Exam - Initializing"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Topmost="True"
        Background="#F5F5F5">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Storyboard x:Key="LogoAnimation">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LogoImage" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
                    <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.8"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1.0">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="3"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LogoImage" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)">
                    <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0.8"/>
                    <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1.0">
                        <EasingDoubleKeyFrame.EasingFunction>
                            <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="3"/>
                        </EasingDoubleKeyFrame.EasingFunction>
                    </EasingDoubleKeyFrame>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
        </ResourceDictionary>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource LogoAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="LogoImage" Grid.Row="0" Source="Resources/logo.png" Width="150" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20">
            <Image.RenderTransform>
                <ScaleTransform CenterX="75" CenterY="75"/>
            </Image.RenderTransform>
        </Image>
        <TextBlock x:Name="StatusText" Grid.Row="2" Text="Đang khởi tạo..." FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Foreground="#333333"/>
        <ProgressBar x:Name="LoadingBar" Grid.Row="1" Height="35" Width="700" Minimum="0" Maximum="100" Value="0" Margin="0,10,0,10" Foreground="#1a73e8" Background="#E0E0E0"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="ConfirmButton" Content="Xác nhận" Width="120" Height="40" Margin="10" IsEnabled="False" Click="ConfirmButton_Click" Style="{StaticResource BlueButtonStyle}"/>
            <Button x:Name="CancelButton" Content="Hủy" Width="120" Height="40" Margin="10" Click="CancelButton_Click" Style="{StaticResource RedButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>